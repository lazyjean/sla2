{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Local",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}",
            "env": {
                "ACTIVE_PROFILE": "local"
            },
            "args": [],
            "showLog": true,
            "showRegisters": false
        },
        {
            "name": "Launch with gRPC UI",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}",
            "env": {
                "ACTIVE_PROFILE": "local"
            },
            "args": [],
            "showLog": true,
            "preLaunchTask": "start-grpcui"
        },
        {
            "name": "Attach to Process",
            "type": "go",
            "request": "attach",
            "mode": "local",
            "processId": "${command:PickProcess}",
            "showLog": true
        },
        {
            "name": "Test Current Package",
            "type": "go",
            "request": "launch",
            "mode": "test",
            "program": "${workspaceFolder}",
            "env": {
                "ACTIVE_PROFILE": "test"
            },
            "args": [
                "-test.v",
                "./${relativeFileDirname}"
            ],
            "showLog": true,
            "buildFlags": "-tags=test",
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "Test Current File",
            "type": "go",
            "request": "launch",
            "mode": "test",
            "program": "${workspaceFolder}",
            "env": {
                "ACTIVE_PROFILE": "test"
            },
            "args": [
                "-test.v",
                "${relativeFile}"
            ],
            "showLog": true,
            "buildFlags": "-tags=test",
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "Launch",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}",
            "showRegisters": false,
            "showGlobalVariables": false
        }
    ]
}